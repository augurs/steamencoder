                <Button Content="Cancel" Style="{StaticResource DarkCancelButtonStyle}"  Height="26" Margin="5,0,5,0"/>
                <Button Content="Apply" Style="{StaticResource DarkButtonStyle}"  Height="26" Margin="0,0,5,0"/>
            </StackPanel>-->

            <!--===========Modal============-->
            <Grid x:Name="EncoderSettingModal" Background="#88000000" Visibility="Collapsed" Panel.ZIndex="100" Margin="0,0,0,-160" Grid.RowSpan="4">
                <Border VerticalAlignment="Center" Height="260" Width="320" Padding="15" BorderThickness="1" Margin="50,0,0,0" HorizontalAlignment="Left">
                    <Grid  Background="#06122b">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <local:ModalHeader Grid.Row="0" Title="Encoder Settings" CloseClicked="EncoderSettings_CloseClicked" Margin="0,-15,0,15"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0" Grid.RowSpan="2">
                            <local:EncoderSettings x:Name="EncoderSettingControl"/>
                        </ScrollViewer>
                        <StackPanel Background="#06122b" Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <Button Content="OK"
                                    Style="{StaticResource DarkButtonStyle}"
                                    Height="26" Width="79" Click="EncoderSettingOK_Click"/>
                            <Button Content="Cancel"
                                    Style="{StaticResource DarkCancelButtonStyle}"
                                    Click="EncoderSettingCancel_Click"
                                    Height="26" Width="79"
                                    Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
