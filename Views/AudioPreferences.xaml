<UserControl x:Class="EncoderApp.Views.AudioPreferences"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:EncoderApp"
             mc:Ignorable="d"
             Height="555"
             Width="720"
             MinHeight="540"
             MinWidth="720">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#071024" Offset="0"/>
            <GradientStop Color="#06122b" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <UserControl.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#131d2f"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,1"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#445370"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#0b1220"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                      Background="{TemplateBinding Background}" 
                      BorderBrush="{TemplateBinding BorderBrush}" 
                      CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980b9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1f6391"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#777"/>
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DarkCancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DarkButtonStyle}">
            <Setter Property="Background" Value="#212a3b"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="#212a3b" BorderThickness="1.5" Background="#131d2f" Grid.Column="0" CornerRadius="4" Margin="10,0,0,0" Height="545" Width="130" VerticalAlignment="Top">
            <StackPanel Background="#131d2f" Orientation="Vertical">
                <RadioButton Style="{StaticResource MenuButtonStyle}" 
                             Width="127" Height="30" 
                             GroupName="MenuGroup" Cursor="Hand"
                             Click="AudioDevices_Click" Foreground="#94a3b8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/speaker-Icon.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Audio Devices" FontSize="14"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{StaticResource MenuButtonStyle}" 
                             Width="127" Height="30" 
                             GroupName="MenuGroup"  Cursor="Hand"
                             Click="Recording_Click"  Foreground="#94a3b8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/recorder-Icon.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Recording" FontSize="14"/>
                    </StackPanel>
                </RadioButton>
                <!--<RadioButton Style="{StaticResource MenuButtonStyle}" 
                             Width="128" Height="30" 
                             GroupName="MenuGroup" Cursor="Hand"
                             Click="Networking_Click" Foreground="#94a3b8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/networkingIcon.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Networking"/>
                    </StackPanel>
                </RadioButton>-->
            </StackPanel>
        </Border>
        <ContentControl x:Name="MainContent" Background="#F0F0F0" Grid.Column="1"/>

    </Grid>
</UserControl>
