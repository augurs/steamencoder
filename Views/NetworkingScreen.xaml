<UserControl x:Class="EncoderApp.Views.NetworkingScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncoderApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="750">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#071024" Offset="0"/>
            <GradientStop Color="#06122b" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <UserControl.Resources>
        <Style x:Key="TopBorderHeadingStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="218"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="OuterBorder"
                                  BorderThickness="1"
                                  Background="#0b1220"
                                  CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="38"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="PART_EditableTextBox"
                                           Grid.Column="0"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           VerticalContentAlignment="Center"
                                           FontSize="14"
                                           FontFamily="pack://application:,,,/Font/#Urbanist"
                                           Foreground="#e6eef8"
                                           Padding="8,0,0,0"
                                           Visibility="Hidden"/>
                                <ContentPresenter x:Name="ContentSite"
                                                    Grid.Column="0"
                                                    Margin="8,0,0,0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Content="{Binding SelectedValue, RelativeSource={RelativeSource TemplatedParent}}"
                                                    ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                    RecognizesAccessKey="True"/>
                                <ToggleButton Grid.Column="1"
                                                x:Name="ToggleButton"
                                                Cursor="Hand"
                                                Focusable="False"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                ClickMode="Press"
                                                Background="Transparent"
                                                BorderBrush="black"
                                                BorderThickness="0"
                                                OverridesDefaultStyle="True"
                                                HorizontalAlignment="Center"
                                                Height="37"
                                                Width="35"
                                                VerticalAlignment="Center">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Grid Background="{TemplateBinding Background}">
                                                            <Path x:Name="Arrow"
                                                                    Data="M0,0 L4,4 L8,0"
                                                                    Stroke="#445370"
                                                                    StrokeThickness="1.5"
                                                                    Fill="Transparent"
                                                                    Width="8"
                                                                    Height="5"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F0F0F0"/>
                                                                <Setter TargetName="Arrow" Property="Stroke" Value="DarkGray"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="Arrow" Property="Stroke" Value="#CCC"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <Popup Name="Popup"
                                         Placement="Bottom"
                                         IsOpen="{TemplateBinding IsDropDownOpen}"
                                         AllowsTransparency="True"
                                         Focusable="False"
                                         PopupAnimation="Slide">
                                    <Grid MaxHeight="200"
                                            MinWidth="{TemplateBinding ActualWidth}"
                                            SnapsToDevicePixels="True"
                                            Background="#445370"
                                            Margin="0,1,0,0" Width="160" >
                                        <Border 
                                              BorderThickness="0"
                                              Background="#131d2f"/>
                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#445370"/>
                                <Setter TargetName="OuterBorder" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#445370"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem" x:Key="CleanComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#445370"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                         Background="{TemplateBinding Background}"
                         Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15233c"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#253552"/>
                                <Setter Property="Foreground" Value="#445370"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="3"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#777"/>
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DarkCancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DarkButtonStyle}">
            <Setter Property="Background" Value="#212a3b"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" 
                    BorderBrush="#212a3b" 
                    Background="#131d2f" 
                    BorderThickness="1.5"  Width="435" 
                    CornerRadius="4" 
                    Margin="-15,-10,0,0">
                <StackPanel Margin="15">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="7,0,0,0"
                                Background="Transparent">
                    </StackPanel>
                    <CheckBox x:Name="EnableProxyCheck"
                             Content="Use a Proxy"
                             FontSize="12"
                             FontWeight="Bold"
                              IsChecked="False"
                              Margin="0,0,0,10"
                              Foreground="#3498db"/>
                    <Grid IsEnabled="{Binding IsChecked, ElementName=EnableProxyCheck}" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Proxy Server Type:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#94a3b8"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Margin="0,0,0,5"
                                  Background="Transparent"
                                  Foreground="#94a3b8"
                                  BorderThickness="0"
                                  SelectedValuePath="Content"
                                  Height="35"
                                  Width="212"
                                  Style="{StaticResource ComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource CleanComboBoxItem}"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="HTTP Proxy"/>
                            <ComboBoxItem Content="SOCKS 5 Proxy"/>
                        </ComboBox>
                        <TextBlock Text="Hostname:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#94a3b8"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Margin="0,0,0,5"
                                 Background="#0b1220"
                                 Foreground="#94a3b8"
                                 BorderThickness="0" 
                                 Padding="2,7,0,0"
                                 BorderBrush="#94a3b8"
                                 Height="30">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Port:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#94a3b8"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Margin="0,0,0,5"
                                 Background="#0b1220"
                                 Foreground="#94a3b8"
                                 BorderThickness="0" 
                                 Padding="2,7,0,0"
                                 BorderBrush="#94a3b8"
                                 Height="30"
                                 Text="8000">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Username:" 
                                   Grid.Row="3" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Foreground="#94a3b8"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Margin="0,0,0,5"
                                 Background="#0b1220"
                                 Foreground="#94a3b8"
                                 BorderThickness="0" 
                                 Padding="2,7,0,0"
                                 BorderBrush="#94a3b8"
                                 Height="30">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock Text="Password:" 
                                   Grid.Row="4" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Foreground="#94a3b8"/>
                        <PasswordBox Grid.Row="4" Grid.Column="1" 
                                     Margin="0,0,0,5"
                                     Background="#0b1220"
                                     Foreground="#94a3b8"
                                     BorderThickness="0"
                                     Padding="2,0,0,2"
                                     Height="30">
                            <PasswordBox.Template>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </PasswordBox.Template>
                        </PasswordBox>
                        <TextBlock Text="Bypass proxy for these hosts:" 
                                   Grid.Row="5" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Foreground="#94a3b8"/>
                        <TextBox Grid.Row="5" Grid.Column="1" 
                                 Margin="0,0,0,5"
                                 Background="#0b1220"
                                 Foreground="#94a3b8"
                                 BorderThickness="0" 
                                 Padding="2,7,0,0"
                                 BorderBrush="#94a3b8"
                                 Height="30">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                    <TextBlock Text="Do not enter your stream connection details here."
                                Grid.Row="6" 
                                Margin="0,5,0,0" 
                                HorizontalAlignment="Left"
                                Foreground="#94a3b8"
                                FontSize="12"/>
                </StackPanel>
            </Border>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,0">
                <Button Content="OK" Style="{StaticResource DarkButtonStyle}" Height="20"/>
                <Button Content="Cancel" Style="{StaticResource DarkCancelButtonStyle}"  Height="20" Margin="5,0,5,0"/>
                <Button Content="Apply" Style="{StaticResource DarkButtonStyle}"  Height="20" Margin="0,0,5,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
