<UserControl x:Class="EncoderApp.Views.MetaDataCapture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EncoderApp.Views"
             Height="500" Width="650">

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#071024" Offset="0"/>
            <GradientStop Color="#06122b" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <UserControl.RenderTransform>
        <TranslateTransform x:Name="RootTransform"/>
    </UserControl.RenderTransform>

    <UserControl.Resources>
        <!-- TabItem Styles -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3b82f6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1e293b"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="11,0,10,0"/>
   
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="-3,0,-1.9,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1,1,0.5,1"
                                BorderBrush="#212a3b"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#3498db"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#131d2f"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#131d2f"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Height" Value="30"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#64748b"/>
                                <Setter TargetName="TabBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Styles -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="285"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ComboBox_PreviewMouseLeftButtonDown"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="OuterBorder"
                                BorderThickness="1"
                                Background="#0b1220"
                                CornerRadius="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="38"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="PART_EditableTextBox"
                                         Grid.Column="0"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         FontSize="14"
                                         FontFamily="pack://application:,,,/Font/#Urbanist"
                                         Foreground="#94a3b8"
                                         Padding="8,0,0,0"
                                         Visibility="Hidden"/>
                                <ContentPresenter x:Name="ContentSite"
                                                  Grid.Column="0"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{Binding SelectedValue, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                  RecognizesAccessKey="True"/>
                                <ToggleButton Grid.Column="1"
                                              x:Name="ToggleButton"
                                              Cursor="Hand"
                                              Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Background="Transparent"
                                              BorderBrush="black"
                                              BorderThickness="0"
                                              Foreground="#94a3b8"
                                              OverridesDefaultStyle="True"
                                              HorizontalAlignment="Center"
                                              Height="37"
                                              Width="38"
                                              VerticalAlignment="Center">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Grid Background="{TemplateBinding Background}">
                                                            <Path x:Name="Arrow"
                                                                  Data="M0,0 L4,4 L8,0"
                                                                  Stroke="#445370"
                                                                  StrokeThickness="1.5"
                                                                  Fill="Transparent"
                                                                  Width="8"
                                                                  Height="5"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F0F0F0"/>
                                                                <Setter Property="Foreground" Value="#94a3b8"/>
                                                                <Setter TargetName="Arrow" Property="Stroke" Value="DarkGray"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="Arrow" Property="Stroke" Value="#CCC"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>

                                <Popup Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Grid MaxHeight="200"
                                          MinWidth="{TemplateBinding ActualWidth}"
                                          SnapsToDevicePixels="True"
                                          Background="#445370"
                                          Margin="0,1,0,0">
                                        <Border BorderThickness="1" Background="#131d2f"/>
                                        <StackPanel IsItemsHost="True"/>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#445370"/>
                                <Setter TargetName="OuterBorder" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="OuterBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem -->
        <Style TargetType="ComboBoxItem" x:Key="CleanComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15233c"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#253552"/>
                                <Setter Property="Foreground" Value="#94a3b8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#94a3b8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Buttons -->
        <Style x:Key="DarkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980b9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1f6391"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#777"/>
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkCancelButtonStyle" TargetType="Button" BasedOn="{StaticResource DarkButtonStyle}">
            <Setter Property="Background" Value="#212a3b"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <local:ModalHeader Grid.Row="0"
                           Title="MetaData Capture"
                           CloseClicked="Header_CloseClicked"
                           MouseLeftButtonDown="ModalHeader_MouseLeftButtonDown"
                           MouseMove="ModalHeader_MouseMove"
                           MouseLeftButtonUp="ModalHeader_MouseLeftButtonUp"/>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--<Border Grid.Row="0" Background="#131d2f" BorderBrush="#212a3b" BorderThickness="1.5" CornerRadius="6" Padding="10" Margin="0,5,0,0">-->
            <Grid Grid.Row="0">
                <TabControl Background="#131d2f" BorderBrush="#212a3b" BorderThickness="0" Foreground="#94a3b8">
                    <TabControl.ItemContainerStyle>
                        <StaticResource ResourceKey="ModernTabItemStyle"/>
                    </TabControl.ItemContainerStyle>

                    <!-- Tabs -->
                    <TabItem Header="Window Title" Style="{StaticResource CustomTabItemStyle}" Margin="-2,0,4,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10,10,10,10">
                                <CheckBox Content="Capture metadata from the title of another application window"
                              Foreground="#3498db" Margin="0,0,0,10" FontSize="12" FontWeight="Bold"/>
                                <TextBlock Text="Step 1. Choose an app window to capture metadata from:" Foreground="#94a3b8"/>
                                <StackPanel Orientation="Horizontal" Margin="5,10,5,5">
                                    <TextBlock Text="Application Window" VerticalAlignment="Center" Foreground="#94a3b8" HorizontalAlignment="Left"/>
                                    <ComboBox Style="{StaticResource ComboBoxStyle}" ItemContainerStyle="{StaticResource CleanComboBoxItem}" 
                                  Margin="15,5,0,5" Height="30" Background="#0b1220" Foreground="#94a3b8" Width="468"/>
                                </StackPanel>
                                <DockPanel Margin="0,0,0,5" LastChildFill="True">
                                    <Button Style="{StaticResource DarkButtonStyle}" Content="Refresh List" Width="100" Height="28" DockPanel.Dock="Left" Margin="0,0,10,0"/>
                                    <CheckBox Content="Only list windows making sound" Foreground="#94a3b8" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="ExtraLight" FontSize="13"/>
                                </DockPanel>
                                <Border Height="1.5" Background="#212a3b" Margin="0,5,0,2"/>
                                <TextBlock Text="Step 2. Choose the format that matches the window title:" Margin="0,10,0,5" Foreground="#94a3b8"/>
                                <StackPanel Margin="4,0,0,0">
                                    <RadioButton FontWeight="Normal" Content="Artist - Title - Window Title"  Foreground="#94a3b8" IsChecked="True"/>
                                    <RadioButton FontWeight="Normal" Content="Window Title - Artist - Title" Margin="0,5,0,0" Foreground="#94a3b8"/>
                                    <RadioButton FontWeight="Normal" Content="Artist - Title" Margin="0,5,0,0" Foreground="#94a3b8"/>
                                    <RadioButton FontWeight="Normal" Content="Custom:" Margin="0,5,0,0" Foreground="#94a3b8"/>
                                </StackPanel>
                                <TextBox Height="25" Text="%artist% - %title% - %appname%" Padding="5,4,0,0" Margin="0,10,0,0" Foreground="#94a3b8" BorderThickness="0" Background="#0b1220"  IsEnabled="True">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock Text="Preview:" Margin="0,10,0,2" Foreground="#94a3b8"/>
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Artist :" Foreground="#94a3b8" FontWeight="Normal"/>
                                    <TextBlock Text="Title:" Margin="0,5,0,0" Foreground="#94a3b8" FontWeight="Normal"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Other TabItems -->
                    <TabItem Header="TCP Server" Style="{StaticResource CustomTabItemStyle}"  Padding="0" Margin="-5,0,-3,0">
                        <TextBlock Text="TCP Server settings go here" Foreground="#94a3b8" Margin="10"/>
                    </TabItem>

                    <TabItem Header="TCP Client" Style="{StaticResource CustomTabItemStyle}" Margin="3,0,-5,0">
                        <TextBlock Text="TCP Client settings go here" Foreground="#94a3b8" Margin="10"/>
                    </TabItem>

                    <TabItem Header="UDP Server" Style="{StaticResource CustomTabItemStyle}" Margin="5,0,-10,0">
                        <TextBlock Text="UDP Server settings go here" Foreground="#94a3b8" Margin="10"/>
                    </TabItem>

                    <TabItem Header="Text File" Style="{StaticResource CustomTabItemStyle}" Margin="10,0,-15,0">
                        <TextBlock Text="Text File settings go here" Foreground="#94a3b8" Margin="10"/>
                    </TabItem>

                    <TabItem Header="Metadata Processor" Style="{StaticResource CustomTabItemStyle}" Margin="15,0,-20,0">
                        <TextBlock Text="Metadata Processor settings go here" Foreground="#94a3b8" Margin="10"/>
                    </TabItem>

                    <TabItem Header="Output Format" Style="{StaticResource CustomTabItemStyle}" Margin="19,0,-24,0">
                        <TextBlock Text="Output Format settings go here" Margin="10"/>
                    </TabItem>
                </TabControl>
            </Grid>

            <!--</Border>-->

            <!-- Bottom Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Style="{StaticResource DarkButtonStyle}" Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
                <Button Style="{StaticResource DarkCancelButtonStyle}" Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
