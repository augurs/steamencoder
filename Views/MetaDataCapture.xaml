                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Click="Advanced_Click" Grid.Column="1"/>
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>
                    <TabItem Header="Output Format" Style="{StaticResource CustomTabItemStyle}" Margin="19,0,-24,0">
                        <StackPanel Margin="10,10,10,10">
                            <TextBlock Text="Capture metadata from the title of another application window" Foreground="#3498db" Margin="0,0,0,10" FontSize="12" FontWeight="Bold"/>
                            <StackPanel Margin="4,0,0,0">
                                <RadioButton FontWeight="Normal" Content="Artist - Title(Default)"  Foreground="#94a3b8" IsChecked="True" Checked="RBOuputFormat_Checked" Unchecked="RBOuputFormat_Unchecked"/>
                                <RadioButton x:Name="CustomRBtn" FontWeight="Normal" Content="Custom:" Margin="0,5,0,0"  IsChecked="False" Foreground="#94a3b8"  Checked="RBOuputFormat_Checked" Unchecked="RBOuputFormat_Unchecked"/>
                            </StackPanel>
                            <TextBox x:Name="CustomTxtOutput" IsEnabled="False" Height="25" Text="%artist% - %title%" Padding="5,4,0,0" Margin="0,10,0,0" Foreground="#94a3b8" BorderThickness="0" Background="#0b1220">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Border Height="1.5" Background="#212a3b" Margin="0,10,0,2"/>
                            <TextBlock Text="Recently received metadata tags :" Margin="0,10,0,2" Foreground="#94a3b8"/>
                            <DataGrid x:Name="RecentMetadataGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      RowBackground="#0b1220"
                                      AlternatingRowBackground="#131d2f"
                                      Background="#0b1220"
                                      Foreground="#94a3b8"
                                      BorderBrush="#212a3b"
                                      BorderThickness="1"
                                      Height="270"
                                      Margin="0,5,0,10" IsReadOnly="True">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#131d2f"/>
                                        <Setter Property="Foreground" Value="#94a3b8"/>
                                        <Setter Property="BorderBrush" Value="#212a3b"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Metadata Field" Binding="{Binding MetadataField}" Width="100" />
                                    <DataGridTextColumn Header="Template Variable" Binding="{Binding TemplateVariable}" Width="150" />
                                    <DataGridTextColumn Header="Last Value" Binding="{Binding LastValue}" Width="100" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Style="{StaticResource DarkButtonStyle}" Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
                <Button Style="{StaticResource DarkCancelButtonStyle}" Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
            <local:MetadataRemapping x:Name="MetadataRemappingModal" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
